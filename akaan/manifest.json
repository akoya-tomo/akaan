{
    "manifest_version":2,

    "name":"赤餡",

    "version":"1.5.0",

    "description":"赤福Extendedにちょっとだけおまけ機能を追加",

    "icons":{
        "48":"icons/icon-48.png"
    },

    "author": "akoya_tomo",

    "homepage_url": "https://github.com/akoya-tomo/akaan/",

    "content_scripts":[
        {
            "exclude_matches": ["*://*.2chan.net/*/res/*","*://*.2chan.net/*/src/*"],
            "matches":["*://*.2chan.net/*/*"],
            "js":["cat.js"],
            "all_frames": true
        },
        {
            "matches":["*://*.2chan.net/*/res/*","*://kako.futakuro.com/futa/*_b/*"],
            "js":["res.js"],
            "all_frames": false
        }
    ],

    "options_ui":{
        "page":"options.html"
    },

    "permissions":[
        "*://www.ftbucket.info/*",
        "*://tsumanne.net/*",
        "storage"
    ],
    
    "applications":{
        "gecko":{
            "id":"akaan@akoya-tomo.github.io",
            "update_url": "https://raw.githubusercontent.com/akoya-tomo/akaan/master/updates.json"
        }
    }    
}